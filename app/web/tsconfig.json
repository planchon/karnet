{
  "extends": "@poltion/typescript-config/react.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2023",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@editor/*": ["src/components/editor/*"],
      "@draw/*": ["src/components/draw/*"],
      "@ui/*": ["src/primitive/ui/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
