{
	"name": "@poltion/slash-tiptap",
	"description": "notion like slash command for tiptap React.js",
	"version": "1.3.0",
	"keywords": [
		"tiptap",
		"slash command",
		"cmdk",
		"tiptap slash"
	],
	"author": "Harsh Pareek <harshpareek91@gmail.com> (https://hrshwrites.vercel.app)",
	"type": "module",
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.16.4",
		"@poltion/typescript-config": "workspace:*",
		"@changesets/cli": "^2.27.8",
		"@types/node": "^22.6.1",
		"@types/react": "catalog:",
		"tsup": "^8.3.0",
		"typescript": "latest"
	},
	"dependencies": {
		"@tiptap/pm": "^2.12.0",
		"@tiptap/react": "^2.12.0",
		"@tiptap/suggestion": "^2.12.0",
		"@xstate/store": "^2.6.0",
		"cmdk": "^1.0.0",
		"react": "catalog:",
		"@types/react": "^19.1.2",
		"tippy.js": "^6.3.7"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "tsc",
